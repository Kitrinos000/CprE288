#include "open_interface.h"
//includes the header file open_interface.h

    void main() {

        ///Allocate and clear all memory for OI Struct
        oi_t *sensor_data = oi_alloc();

        ///Initialize open interface
        oi_init(sensor_data);

        //variable
        double angle = 0;

        oi_setWheels(-100, 100); // sping all the way around
        while(angle > -90){
            oi_update(sensor_data);
            angle += sensor_data->angle;
       }
       oi_setWheels(0, 0); // stop

       oi_free(sensor_data);
       return 0;
}



